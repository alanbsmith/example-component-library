{
  "name": "example-component-lib",
  "version": "0.1.0",
  "description": "an example setup for building a component lib with ReactJS",
  "main": "build/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "babel lib -d build",
    "build:watch": "babel lib -w -d build",
    "lint": "eslint lib/**; exit 0",
    "lint:watch": "esw -w lib/**",
    "prepublish": "npm run build",
    "test": "mocha --compilers js:babel-core/register ./test/**/*.spec.js",
    "test:watch": "npm test -- --watch"
  },
  "author": "Alan Smith <a.bax.smith@gmail.com> (https://github.com/alanbsmith)",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-watch": "^3.1.0",
    "expect": "^1.20.2",
    "mocha": "^3.4.2",
    "polished": "^1.1.3",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "styled-components": "^2.0.1"
  }
}
